@model IEnumerable<SyndicPfaApp.Models.Ascenseur>

@{
    ViewData["Title"] = "Index";
}

<h1>Ascenseurs</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.AscenseurName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Etat)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DernierEntretien)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.AscenseurName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Etat)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DernierEntretien)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.AscenseurId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.AscenseurId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.AscenseurId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
